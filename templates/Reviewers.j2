{% extends "main.j2" %}
{% block content %}

<h1>Reviewers</h1>

{# READ table #}
<table>
    <thead>
        {# For the table header row, we print the DB attribute names #}
        <tr>
            {% for key in reviewers[0].keys() %}
            <th>{{ key }}</th>
            {% endfor %}
            <th></th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        {# For each row, print the id, fname, lname, homeworld and age #}
        {% for reviewer in reviewers %}
        <tr>
            <td>{{ reviewer['Reviewer ID'] }}</td>
            <td>{{ reviewer['Reviewer Company'] }}</td>

            {# Edit form #}
            <form id="edit_developer_form">
                
                <td>
                    <button type="submit">
                        Edit
                    </button>
                </td>

            {# DELETE form #}
            <form id="delete_reviewer_form">
                <input type="hidden" name="delete_reviewer_id" value="{{ reviewer['Reviewer ID'] }}">
                <input type="hidden" name="delete_reviewer_name" value="{{ reviewer['Reviewer Company'] }}">
                <td>
                    <button type="submit">
                        Delete
                    </button>
                </td>
            </form>
        </tr>
        {% endfor %}
    </tbody>
</table>



{% endblock %}