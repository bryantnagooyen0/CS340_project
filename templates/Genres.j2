{% extends "main.j2" %}
{% block content %}

<h1>Genres</h1>

{# READ table #}
<table>
    <thead>
        {# For the table header row, we print the DB attribute names #}
        <tr>
            {% for key in genres[0].keys() %}
            <th>{{ key }}</th>
            {% endfor %}
            <th></th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        {# For each row, print the id, fname, lname, homeworld and age #}
        {% for genre in genres %}
        <tr>
            <td>{{ genre['Genre ID'] }}</td>
            <td>{{ genre['Genre Name' ] }}</td>

            {# Edit form #}
            <form id="edit_genre_form">
                <input type="hidden" name="edit_genre_id" value="{{ genre['Genre ID'] }}">
                <input type="hidden" name="edit_genre_name" value="{{ genre['Genre Name' ] }}">
                <td>
                    <button type="submit">
                        Edit
                    </button>
                </td>
                
            </form>

            {# DELETE form #}
            <form id="delete_genre_form">
                <input type="hidden" name="delete_genre_id" value="{{ genre['Genre ID'] }}">
                <input type="hidden" name="delete_genre_name" value="{{ genre['Genre Name' ] }}">
                <td>
                    <button type="submit">
                        Delete
                    </button>
                </td>
            </form>
        </tr>
        {% endfor %}
    </tbody>
</table>



{% endblock %}