{% extends "main.j2" %}
{% block content %}

<h1>Developers</h1>

{# READ table #}
<table>
    <thead>
        {# For the table header row, we print the DB attribute names #}
        <tr>
            {% for key in developers[0].keys() %}
            <th>{{ key }}</th>
            {% endfor %}
            <th></th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        {# For each row, print the id, fname, lname, homeworld and age #}
        {% for developer in developers %}
        <tr>
            <td>{{ developer['Developer ID'] }}</td>
            <td>{{ developer['Developer Name'] }}</td>

                    <td>
                        <form class="edit_developer_form" method="post" action="/edit/developer" style="display:inline;">
                            <input type="hidden" name="edit_developer_id" value="{{ developer['Developer ID'] }}">
                            <input type="hidden" name="edit_developer_name" value="{{ developer['Developer Name'] }}">
                            <button type="submit">Edit</button>
                        </form>
                    </td>

                    {# DELETE form #}
                    <td>
                        <form class="delete_developer_form" method="post" action="/delete/developer" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this developer?');">
                            <input type="hidden" name="delete_developer_id" value="{{ developer['Developer ID'] }}">
                            <button type="submit">Delete</button>
                        </form>
                    </td>
                
            </form>

    

            
        </tr>
        {% endfor %}
    </tbody>
</table>



{% endblock %}